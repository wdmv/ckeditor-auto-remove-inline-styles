{
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable"],
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"strict": true,
		"module": "es6",
		"target": "es2019",
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"declaration": false,
		"emitDeclarationOnly": true,
		"declarationMap": false,
		"declarationDir": "./dist/types"
	},
	"include": ["./src"]
}
